<UserControl x:Class="NHIRD.EXT_FolderSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NHIRD"
             mc:Ignorable="d" >
    <Grid Background="White" >
        <StackPanel HorizontalAlignment="Center" Margin="0, 10" >
            <DockPanel Width="480" HorizontalAlignment="Stretch" LastChildFill="True">
                <CheckBox IsChecked="{Binding IsCriteriaChecked, Mode=TwoWay}" Content="{Binding Title}" DockPanel.Dock="Left"/>
                <Button DockPanel.Dock="Right" Click="Button_Click">Select Folder</Button>
                <TextBox x:Name="Tx_ID" Margin="5,0" Text="{Binding FolderPath, Mode=TwoWay}"/>
            </DockPanel>
            <TextBlock x:Name="Tb_IDmessage" HorizontalAlignment="Center" Text="{Binding Message, Mode=TwoWay}"/>
        </StackPanel>
    </Grid>
</UserControl>
